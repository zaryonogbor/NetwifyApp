{
  "expo": {
    "name": "Netwify",
    "slug": "netwify",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563EB"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.netwify.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Netwify needs access to your camera to scan QR codes and connect with other professionals."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563EB"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.netwify.app",
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Netwify to access your camera to scan QR codes"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Netwify to access your photos to add a profile picture"
        }
      ],
      "expo-font"
    ]
  }
}
